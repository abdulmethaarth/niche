<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="@dimen/margin10"
    app:cardCornerRadius="@dimen/margin10"
    app:cardUseCompatPadding="true"
    app:cardElevation="@dimen/margin10">

    <TextView
        android:id="@+id/replywith"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Reply with "
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@color/colorAccent"/>
    <LinearLayout
        android:layout_gravity="bottom"
        android:layout_margin="@dimen/margin10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/coment_box"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:background="@drawable/coment_box">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/edit_box"
                android:textColorHint="#CFD8DC"
                android:textColor="#CFD8DC"
                android:hint="Write comment"
                android:id="@+id/et_replyCommnet"
                android:maxHeight="80dp"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="4"
                android:padding="4dp"
                android:gravity="bottom"
                android:layout_gravity="bottom"
                android:src="@drawable/send_msg"
                android:id="@+id/sendButtonDialog"/>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>